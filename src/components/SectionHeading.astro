---
interface Props {
  title: string;
  subtitle?: string;
  tag?: string;
}

const { title, subtitle, tag } = Astro.props;
---

<div class="text-center mb-16">
  {tag && (
    <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6">
      {tag}
    </span>
  )}
  <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
    {title}
  </h2>
  {subtitle && (
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      {subtitle}
    </p>
  )}
</div> 